{
  "version": 2,
  "builds": [
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "core/wsgi.py" },
    { "src": "/admin/(.*)", "dest": "core/wsgi.py" },
    { "src": "/(.*)", "dest": "core/wsgi.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "core.settings"
  }
}
